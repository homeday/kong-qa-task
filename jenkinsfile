pipeline {
    agent any
    
    tools {
        nodejs 'nodejs-18'
    }
        
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        
        stage('Testing') {
            steps {
                sh 'npm run test:ci'
            }
        }
    }
    
    post {
        always {
            junit 'reports/test-results.xml'

            publishHTML([
                target: [
                    allowMissing: false,
                    alwaysLinkToLastBuild: true,
                    keepAll: true,
                    reportDir: 'report',
                    reportFiles: 'test-results.html',
                    reportName: 'Mocha Test Report'
                ]
            ])
        }
        success {
            emailext (
                subject: "Success: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                body: "report: ${env.BUILD_URL}",
                to: "team@example.com"
            )
        }
        failure {
            emailext (
                subject: "Failure: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                body: "report: ${env.BUILD_URL}",
                to: "team@example.com"
            )
        }
    }
}
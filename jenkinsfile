pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        
        stage('Testing') {
            steps {
                sh 'npm run test:ci'
            }
        }
    }
    
    post {
        always {
            junit 'reports/test-results.xml'

            publishHTML([
                target: [
                    allowMissing: false,
                    alwaysLinkToLastBuild: true,
                    keepAll: true,
                    reportDir: 'report',
                    reportFiles: 'test-results.html',
                    reportName: 'Mocha Test Report'
                ]
            ])
        }
    }
}
